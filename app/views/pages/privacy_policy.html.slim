        ["Notifications", "email, delivery status", "Email provider", "transactional emails", "contract/legitimate interests", "per provider"],
        ["Anti-spam", "captcha token, risk score", "Captcha provider", "abuse prevention", "legitimate interests", "minimal, short-term"] \
      ]
      table class="min-w-full divide-y divide-gray-200 text-xs sm:text-sm"
        thead
          tr class="[&_th]:px-2 sm:[&_th]:px-3 [&_th]:py-2 [&_th]:text-left [&_th]:font-medium [&_th]:text-gray-200"
